const ModuleEditor = ({ module, onSave, onCancel }) => {
  const [formData, setFormData] = useState({
    title: module?.title || '',
    type: module?.type || 'story',
    level: module?.level || 1,
    chapter: module?.chapter || 1,
    published: module?.published || false,
    content: module?.content || {}
  });
  const [showPreview, setShowPreview] = useState(false);

  const handleInputChange = (field, value) => {
    setFormData(prev => ({
      ...prev,
      [field]: value
    }));
  };

  const handleContentChange = (field, value) => {
    setFormData(prev => ({
      ...prev,
      content: {
        ...prev.content,
        [field]: value
      }
    }));
  };

  const handleNestedContentChange = (parent, field, value) => {
    setFormData(prev => ({
      ...prev,
      content: {
        ...prev.content,
        [parent]: {
          ...prev.content[parent],
          [field]: value
        }
      }
    }));
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    onSave(formData);
  };

  if (showPreview) {
    return (
      <div className="relative">
        <div className="fixed top-4 left-4 z-50 bg-white rounded-lg shadow-lg p-4">
          <button
            onClick={() => setShowPreview(false)}
            className="flex items-center space-x-2 text-gray-600 hover:text-gray-900"
          >
            <ArrowLeft className="w-4 h-4" />
            <span>Back to Editor</span>
          </button>
        </div>
        <DynamicStoryModule module={formData} isPreview={true} />
      </div>
    );
  }

  return (
    <div className="max-w-4xl mx-auto px-6 py-8">
      <div className="flex items-center justify-between mb-8">
        <h1 className="text-3xl font-bold text-gray-900">
          {module?.id ? 'Edit Module' : 'Create New Module'}
        </h1>
        <button
          onClick={onCancel}
          className="flex items-center space-x-2 text-gray-600 hover:text-gray-900"
        >
          <ArrowLeft className="w-4 h-4" />
          <span>Back to Library</span>
        </button>
      </div>

      <form onSubmit={handleSubmit} className="space-y-8">
        {/* Basic Information */}
