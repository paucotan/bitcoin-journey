  const handleSave = (moduleData) => {
    if (editingModule.id) {
      ContentManager.updateModule(editingModule.id, moduleData);
    } else {
      ContentManager.addModule(moduleData);
    }
    refreshModules();
    setCurrentView('overview');
    setEditingModule(null);
  };

  if (currentView === 'create' || currentView === 'edit') {
    return (
      <ModuleEditor 
        module={editingModule}
        onSave={handleSave}
        onCancel={() => {
          setCurrentView('overview');
          setEditingModule(null);
        }}
      />
    );
  }

  return (
