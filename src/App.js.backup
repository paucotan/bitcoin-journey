const BitcoinJourneyApp = () => {
  const [currentView, setCurrentView] = useState('landing'); // 'landing' | 'home' | 'learning' | 'dashboard' | 'lesson' | 'progress' | 'about' | 'admin'
  const [currentModule, setCurrentModule] = useState(null);
  const [user, setUser] = useState({
    id: 1,
    name: 'Alex',
    level: 1,
    streak: 3,
    language: 'en'
  });

  const handleStartLesson = () => {
    setCurrentView('lesson');
  };

  const handleStartModule = (module) => {
    setCurrentModule(module);
    setCurrentView('lesson');
  };

  const handleCompleteLesson = () => {
    setCurrentView('dashboard');
    setCurrentModule(null);
  };

  const handleLanguageChange = (lang) => {
    setUser(prev => ({ ...prev, language: lang }));
  };

  const handleNavigate = (section) => {
    switch(section) {
      case 'home':
        setCurrentView('landing');
        break;
      case 'learning':
        setCurrentView('dashboard');
        break;
      case 'progress':
        setCurrentView('progress');
        break;
      case 'about':
        setCurrentView('about');
        break;
      case 'admin':
        setCurrentView('admin');
        break;
      default:
        setCurrentView('landing');
    }
  };

  const getCurrentChapter = () => {
    if (currentView === 'lesson') {
      return mockData.currentLesson?.title || 'Current Lesson';
    }
    return null;
  };

  const renderCurrentView = () => {
    switch(currentView) {
      case 'landing':
        return <LandingPage onGetStarted={() => setCurrentView('dashboard')} />;
      case 'dashboard':
        return <Dashboard onStartLesson={handleStartLesson} onStartModule={handleStartModule} />;
      case 'lesson':
        if (currentModule) {
          return (
            <DynamicModuleRenderer 
              module={currentModule}
              onComplete={handleCompleteLesson}
              onBack={() => setCurrentView('dashboard')}
            />
          );
        }
        return (
          <LessonView 
            lesson={mockData.currentLesson}
            onComplete={handleCompleteLesson}
            onBack={() => setCurrentView('dashboard')}
          />
        );
      case 'progress':
        return <ProgressPage />;
      case 'about':
        return <AboutPage />;
      case 'admin':
        return <AdminDashboard onNavigate={handleNavigate} />;
      default:
        return <LandingPage onGetStarted={() => setCurrentView('dashboard')} />;
    }
  };

  return (
    <div className="min-h-screen bg-gray-50">
      {currentView === 'landing' ? (
        renderCurrentView()
      ) : (
        <>
          <Header 
            user={user} 
            onLanguageChange={handleLanguageChange}
            currentView={currentView}
            onNavigate={handleNavigate}
          />
          
          <Breadcrumb 
            currentView={currentView}
            currentChapter={getCurrentChapter()}
            onNavigate={handleNavigate}
          />
          
          {currentView === 'lesson' && (
            <ProgressBar current={2} total={3} streak={user.streak} />
          )}
          
          {renderCurrentView()}
        </>
      )}
      
      {/* Claude Tutor - Always Available except on landing */}
      {currentView !== 'landing' && <ClaudeTutor />}
    </div>
  );
};

export default BitcoinJourneyApp;