// Dynamic Module Renderer
const DynamicModuleRenderer = ({ module }) => {
  if (!module || !module.content) {
    return (
      <div className="min-h-screen bg-gray-100 flex items-center justify-center">
        <div className="text-center">
          <div className="text-6xl mb-4">📚</div>
          <h2 className="text-xl font-semibold text-gray-900 mb-2">Module not found</h2>
          <p className="text-gray-600">This module may not be published yet.</p>
        </div>
      </div>
    );
  }

  if (module.type === 'story') {
    return <DynamicStoryModule module={module} />;
  }
  
  // For now, we'll handle other types later
  return (
    <div className="min-h-screen bg-gray-100 flex items-center justify-center">
      <div className="text-center">
        <div className="text-6xl mb-4">🚧</div>
        <h2 className="text-xl font-semibold text-gray-900 mb-2">Module type not implemented</h2>
        <p className="text-gray-600">Module type "{module.type}" coming soon!</p>
      </div>
    </div>
  );
};

const DynamicStoryModule = ({ module, isPreview = false }) => {
  const { content } = module;
  
  const backgroundGradients = {
    hopeful: "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
    concerned: "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
    panic: "linear-gradient(135deg, #fa709a 0%, #fee140 100%)",
    understanding: "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)"
  };

  const gradient = backgroundGradients[content.visual?.mood] || backgroundGradients.hopeful;

  return (
    <div className="relative">
      {/* Progress Bar for non-preview */}
      {!isPreview && (
        <div className="fixed top-0 left-0 w-full h-1 bg-gray-200 z-50">
          <div className="h-full bg-gradient-to-r from-orange-500 to-yellow-500 w-1/3 transition-all duration-300" />
        </div>
      )}

      {/* Story Sections */}
      <div className="min-h-screen flex items-center justify-center relative overflow-hidden" style={{ background: gradient }}>
        {/* Background Pattern */}
        <div className="absolute inset-0 opacity-10">
          <div className="text-9xl animate-float absolute top-10 left-10">{content.visual?.primaryEmoji}</div>
          <div className="text-6xl animate-float-delayed absolute bottom-20 right-20">💭</div>
        </div>

        <div className="max-w-4xl mx-auto px-6 py-20 text-center relative z-10">
          {/* Year/Location Badge */}
          {content.setting && (
            <div className="inline-block bg-white/20 backdrop-blur-sm text-white px-6 py-2 rounded-full text-lg font-semibold mb-6">
              {content.setting.year} • {content.setting.location}
            </div>
          )}

          {/* Character Introduction */}
          {content.character && (
            <div className="text-6xl mb-4">{content.character.emoji}</div>
          )}

          {/* Main Visual */}
          <div className="text-8xl mb-8 animate-bounce-gentle">{content.visual?.primaryEmoji}</div>

          {/* Module Title */}
          <h2 className="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
            {module.title}
          </h2>

          {/* Character Introduction */}
          {content.character && (
            <div className="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 mb-6">
              <p className="text-xl text-white">
                Meet <strong>{content.character.name}</strong>, {content.character.occupation}
              </p>
            </div>
          )}

          {/* Story Narrative Sections */}
          {content.narrative && (
            <div className="space-y-6">
              {/* Setup */}
              {content.narrative.setup && (
                <div className="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6">
                  <p className="text-lg text-white leading-relaxed">
                    {content.narrative.setup}
                  </p>
                </div>
              )}

              {/* Conflict */}
              {content.narrative.conflict && (
                <div className="bg-red-500/20 backdrop-blur-sm border border-red-300/30 rounded-2xl p-6">
                  <p className="text-lg text-white leading-relaxed">
                    {content.narrative.conflict}
                  </p>
                </div>
              )}

              {/* Revelation */}
              {content.narrative.revelation && (
                <div className="bg-blue-500/20 backdrop-blur-sm border border-blue-300/30 rounded-2xl p-6">
                  <p className="text-lg text-white leading-relaxed">
                    💡 <strong>Key Insight:</strong> {content.narrative.revelation}
                  </p>
                </div>
              )}
            </div>
          )}

          {/* Learning Objective */}
          {content.learningObjective && (
