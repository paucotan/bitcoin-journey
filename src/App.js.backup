// Content Management System
const ContentManager = {
  // Get all modules from localStorage
  getAllModules: () => {
    const stored = localStorage.getItem('bitcoinJourney_modules');
    return stored ? JSON.parse(stored) : getDefaultModules();
  },
  
  // Save modules to localStorage
  saveModules: (modules) => {
    localStorage.setItem('bitcoinJourney_modules', JSON.stringify(modules));
  },
  
  // Add new module
  addModule: (module) => {
    const modules = ContentManager.getAllModules();
    const newModule = {
      ...module,
      id: Date.now().toString(),
      createdAt: new Date().toISOString(),
      published: false
    };
    modules.push(newModule);
    ContentManager.saveModules(modules);
    return newModule;
  },
  
  // Update module
  updateModule: (id, updates) => {
    const modules = ContentManager.getAllModules();
    const index = modules.findIndex(m => m.id === id);
    if (index !== -1) {
      modules[index] = { ...modules[index], ...updates };
      ContentManager.saveModules(modules);
      return modules[index];
    }
    return null;
  },
  
  // Delete module
  deleteModule: (id) => {
    const modules = ContentManager.getAllModules();
    const filtered = modules.filter(m => m.id !== id);
    ContentManager.saveModules(filtered);
  },
  
  // Get published modules only
  getPublishedModules: () => {
    return ContentManager.getAllModules().filter(m => m.published);
  }
};

