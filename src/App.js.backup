                    onChange={(e) => handleNestedContentChange('narrative', 'setup', e.target.value)}
                    className="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    rows="3"
                    placeholder="Set the scene and introduce the character's situation"
                  />
