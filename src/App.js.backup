              </div>
            </div>

            {/* Visual Elements */}
            <div className="mb-6">
              <h3 className="text-lg font-medium text-gray-900 mb-3">Visual Elements</h3>
              <div className="grid md:grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">Primary Emoji</label>
                  <input
                    type="text"
                    value={formData.content.visual?.primaryEmoji || ''}
                    onChange={(e) => handleNestedContentChange('visual', 'primaryEmoji', e.target.value)}
                    className="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="e.g. 🛒💰"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2">Mood</label>
                  <select
                    value={formData.content.visual?.mood || ''}
